@model IEnumerable<PPC_Rental.Models.PROPERTY>
@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<h2>Agency Area</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>

<div class="col-xs-12">
    <!-- PAGE CONTENT BEGINS -->
    <div class="row">
        <div class="col-xs-12">
            <table id="simple-table" class="table  table-bordered table-hover">
                <thead>


                <th>PropertyName</th>
                <th>Avatar</th>
                <th>PropertyType</th>
                <th>Price</th>
                <th>UnitPrice</th>
                <th>Area</th>
                <th>District</th>
                <th>Status</th>
                
                <th>Created</th>
               
                <th></th>


                </thead>

                <tbody>
                    @foreach (var item in Model )
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.PropertyName)
                            </td>
                            <td>
                                @{

                                    try
                                    {
                                           
                                        <img src="~/Images/@item.Avatar" width="150px">
                                      

                                    }
                                    catch (Exception ex)
                                    {

                                    }
                                }
                            </td>

                            <td>
                                @Html.DisplayFor(modelItem => item.PROPERTY_TYPE.CodeType)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Price)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.UnitPrice)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Area)
                            </td>

                            <td>
                                @Html.DisplayFor(modelItem => item.DISTRICT.DistrictName)
                            </td>

                            <td class="hidden-480">
                                <span class="label label-sm label-warning">@Html.DisplayFor(modelItem => item.PROJECT_STATUS.Status_Name)</span>

                            </td>


                            

                            <th>
                                @Html.DisplayFor(modelItem => item.Created_at)
                            </th>
                           
                            <td>
                               @Html.ActionLink("Edit", "Edit", new { id = item.ID }) |
                                @Html.ActionLink("Delete", "Delete", new { id = item.ID })
                            </td>
                        </tr>
                                    }




                </tbody>
            </table>
            @*@Html.PagedListPager(Model, page => Url.Action("Index", new { page }))*@
        </div><!-- /.span -->
    </div><!-- /.row -->
    </div>
    <!-- PAGE CONTENT ENDS -->
