@{
    ViewBag.Title = "Home Page";
    DemoPPCRentalEntities1 db = new DemoPPCRentalEntities1();
    var Quans = new SelectList(db.DISTRICTs, "ID", "DistrictName");
    var Protyp = new SelectList(db.PROPERTY_TYPE, "ID","CodeType");
}
@model IEnumerable<PPC_Rental.Models.PROPERTY>
    @using PPC_Rental.Models
<!-- SLIDER -->
<div class="flexslider" id="slider">
    <ul class="slides">
        @foreach (var item in Model)
        {
            if (item.ID <= 10)
            {
            <li>
                <img src="/Content/Hata/images/@item.Images" class="img-responsive" alt="Slider Image" />
                <div class="container">
                    <div class="row">
                        <div class="col-md-12">
                            <div class="detail">
                                <div class="white">
                                    <h2>@item.PropertyName.Substring(0, item.PropertyName.Length - 10)</h2>
                                    <span class="slide-location">@item.WARD.WardName, @item.DISTRICT.DistrictName</span>
                                    <div class="bar"></div>
                                    <span class="slide-price">$ @item.Price</span>
                                </div>
                                <div class="red">
                                    <span class="bath">@item.BathRoom Bathrooms</span>
                                    <span class="bed">@item.BedRoom Bedrooms</span>
                                    <span class="gym">@item.PackingPlace Garage</span>
                                    
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </li>
            }

        }
    </ul>
</div>
<!-- SLIDER -->
<!-- FILTER -->
<form role="search" action="@Url.Action("Search","Home")" method="get">
    <div class="container">
        <div class="filter">

            @Html.DropDownList("dis", Quans, "Location", new { @class= "location", @id = "dis" })
           @Html.DropDownList("propertytype", Protyp, "Type", new { @class= "cata",@id = "type" })
            <select class="type" name="bed">
                <option>Bedroom</option>
                <option value="1">1</option>
                <option value="2">2</option>
                <option value="3">3</option>
                <option value="4">4</option>
                <option value="5">5</option>
            </select>

            <select class="type" name="bath">
                <option>Bathroom</option>
                <option value="1">1</option>
                <option value="2">2</option>
                <option value="3">3</option>
                <option value="4">4</option>
                <option value="5">5</option>
            </select>
          

            <button type="submit" class="btn"><i class="fa fa-search"></i>Search</button>

            <div class="range">
                <input type="text" name="name" placeholder="Key Word" class="add" />
                <input type="text" name="name" placeholder="Min. Price"  class="add1" />
                <input type="text" name="name" placeholder="Max. Price" class="add1" />
                
            </div>

        </div>
    </div>
    </form> 
    <!-- FILTER -->
    <!-- ITEMS GRID -->
    <div class="container">
        <div class="row">
            @foreach (var ds in Model)
            {
                <div class="col-md-4 col-sm-6">
                    <div class="item">
                        <div class="item-header clearfix">
                            @if (ds.PropertyName.Length > 30)
                            {
                                <h3><a href="#">@ds.PropertyName.Substring(0, ds.PropertyName.Length - 10)</a></h3>
                            }
                            else
                            {
                                <h3><a href="#">@ds.PropertyName</a></h3>
                            }
