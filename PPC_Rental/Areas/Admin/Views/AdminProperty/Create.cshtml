@model PPC_Rental.Models.PROPERTY

@{
    ViewBag.Title = "Create";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<h2>Create</h2>

@using (Html.BeginForm("Create", "AdminProperty", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()


    <div class="form-horizontal">
        <h4>PROPERTY</h4>
        <hr />
       
        

        <form class="form-horizontal" role="form">
            <div class="form-group">
                <label class="col-sm-3 control-label no-padding-right" for="form-field-1">Property Name</label>

                <div class="col-sm-9">
                    @Html.TextBoxFor(model => model.PropertyName, new { style = "width:500px" })
                    @Html.ValidationMessageFor(model => model.PropertyName)

                </div>
            </div>
            <div class="space-4"></div>

            <div class="form-group">
                <label class="col-sm-3 control-label no-padding-right" for="form-field-1"> @Html.LabelFor(model => model.Avatar) </label>

                <div class="col-sm-9">
                
                    <input type="file" name="ImageFile">
                    @*@Html.TextBoxFor(model => model.Avatar, new { style = "width:250px" })
                        @Html.ValidationMessageFor(model => model.Avatar)*@

                </div>
            </div>

            @*multiple*@
            @*<div class="form-group">
                <label class="col-sm-3 control-label no-padding-right" for="form-field-1"> @Html.LabelFor(model => model.Images) </label>

                <div class="col-sm-9">
                    <input multiple type="file" name="files" value="Browse" />

                </div>
            </div>*@

            <div class="space-4"></div>
            <div class="form-group">
                <label class="col-sm-3 control-label no-padding-right" for="form-field-1">Property Type</label>

                <div class="col-sm-9">
                    
                @Html.DropDownList("PropertyType_ID", new SelectList(ViewBag.property_type, "ID", "CodeType"), new { @class = "chosen-select form-control", style = "width:250px" })
                @Html.ValidationMessageFor(model => model.PropertyType_ID, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="space-4"></div>
            <div class="form-group">
                <label class="col-sm-3 control-label no-padding-right" for="form-field-1"> @Html.LabelFor(model => model.Content) </label>

                <div class="col-sm-9">
                    @Html.TextAreaFor(model => model.Content, new { style = "width:500px; height:100px" })
                    @Html.ValidationMessageFor(model => model.Content)

                </div>
            </div>
            <div class="space-4"></div>
            <div class="form-group">
                <label class="col-sm-3 control-label no-padding-right" for="form-field-1">District</label>

                <div class="col-sm-9">

                    @Html.DropDownList("District_ID", new SelectList(ViewBag.property_district, "ID", "DistrictName"), new { @class = "chosen-select form-control", style = "width:250px" })
                    @Html.ValidationMessageFor(model => model.District_ID)

                </div>
            </div>
            <div class="space-4"></div>
            <div class="form-group">
                <label class="col-sm-3 control-label no-padding-right" for="form-field-1">Ward</label>

                <div class="col-sm-9">
                    @Html.DropDownList("Ward_ID", new SelectList(ViewBag.property_ward, "ID", "WardName"), new { @class = "chosen-select form-control", style = "width:250px" })
                    @Html.ValidationMessageFor(model => model.Ward_ID)

                </div>
            </div>
            <div class="space-4"></div>
            <div class="form-group">
                <label class="col-sm-3 control-label no-padding-right" for="form-field-1">Street</label>

                <div class="col-sm-9">
                    @Html.DropDownList("Street_ID", new SelectList(ViewBag.property_street, "ID", "StreetName"), new { @class = "chosen-select form-control", style = "width:250px" })
                    @Html.ValidationMessageFor(model => model.Street_ID)

                </div>
            </div>
            <div class="space-4"></div>
            <div class="form-group">
                <label class="col-sm-3 control-label no-padding-right" for="form-field-1">Price</label>

                <div class="col-sm-9">
                    @Html.TextBoxFor(model => model.Price, new { style = "width:250px" })
                    @Html.ValidationMessageFor(model => model.Price)

                </div>
            </div>
            <div class="space-4"></div>
            <div class="form-group">
                <label class="col-sm-3 control-label no-padding-right" for="form-field-1">Unit Price</label>

                <div class="col-sm-9">
                    @Html.TextBoxFor(model => model.UnitPrice, new { style = "width:250px" })
                    @Html.ValidationMessageFor(model => model.UnitPrice)

                </div>
            </div>
            <div class="space-4"></div>
            <div class="form-group">
                <label class="col-sm-3 control-label no-padding-right" for="form-field-1">Area</label>

                <div class="col-sm-9">
                    @Html.TextBoxFor(model => model.Area, new { style = "width:250px" })
                    @Html.ValidationMessageFor(model => model.Area)

                </div>
            </div>
            <div class="space-4"></div>
            <div class="form-group">
                <label class="col-sm-3 control-label no-padding-right" for="form-field-1">Bedrooms</label>

                <div class="col-sm-9">
                    @Html.TextBoxFor(model => model.BedRoom, new { style = "width:250px" })
                    @Html.ValidationMessageFor(model => model.BedRoom)

                </div>
            </div>
            <div class="space-4"></div>
            <div class="form-group">
                <label class="col-sm-3 control-label no-padding-right" for="form-field-1">Bathrooms</label>

                <div class="col-sm-9">
                    @Html.TextBoxFor(model => model.BathRoom, new { style = "width:250px" })
                    @Html.ValidationMessageFor(model => model.BathRoom)

                </div>
            </div>
            <div class="space-4"></div>
            <div class="form-group">
                <label class="col-sm-3 control-label no-padding-right" for="form-field-1">Parking Place</label>

                <div class="col-sm-9">
                    @Html.TextBoxFor(model => model.PackingPlace, new { style = "width:250px" })
                    @Html.ValidationMessageFor(model => model.PackingPlace)

                </div>
            </div>
            <div class="space-4"></div>
            <div class="form-group">
                <label class="col-sm-3 control-label no-padding-right" for="form-field-1">Email</label>

                <div class="col-sm-9">
                    @Html.DropDownList("UserID", new SelectList(ViewBag.property_userid, "ID", "Email"), new { @class = "chosen-select form-control", style = "width:250px" })
                    @Html.ValidationMessageFor(model => model.USER)

                </div>
            </div>
            <div class="space-4"></div>
            <div class="form-group">
                <label class="col-sm-3 control-label no-padding-right" for="form-field-1">Created At</label>

                <div class="col-sm-9">
                    @Html.TextBoxFor(model => model.Created_at, new { style = "width:250px" })
                    @Html.ValidationMessageFor(model => model.Created_at)

                </div>
            </div>
            <div class="space-4"></div>
            <div class="form-group">
                <label class="col-sm-3 control-label no-padding-right" for="form-field-1">Create Post</label>

                <div class="col-sm-9">
                    @Html.TextBoxFor(model => model.Create_post, new { style = "width:250px" })
                    @Html.ValidationMessageFor(model => model.Create_post)

                </div>
            </div>
            <div class="space-4"></div>
            <div class="form-group">
                <label class="col-sm-3 control-label no-padding-right" for="form-field-1">Status</label>

                <div class="col-sm-9">
                    @Html.DropDownList("Status_ID", new SelectList(ViewBag.property_status, "ID", "Status_Name"), new { @class = "chosen-select form-control", style = "width:250px" })
                    @Html.ValidationMessageFor(model => model.PROJECT_STATUS)

                </div>
            </div>
            <div class="space-4"></div>
            <div class="form-group">
                <label class="col-sm-3 control-label no-padding-right" for="form-field-1">Note</label>

                <div class="col-sm-9">
                    @Html.TextBoxFor(model => model.Note, new { style = "width:250px" })
                    @Html.ValidationMessageFor(model => model.Note)

                </div>
            </div>
            <div class="space-4"></div>
            <div class="form-group">
                <label class="col-sm-3 control-label no-padding-right" for="form-field-1">Update At</label>

                <div class="col-sm-9">
                    @Html.TextBoxFor(model => model.Updated_at, new { style = "width:250px" })
                    @Html.ValidationMessageFor(model => model.Updated_at)

                </div>
            </div>


            <div class="space-4"></div>


            <div class="clearfix form-actions">
                <div class="col-md-offset-3 col-md-9">
                    <button class="btn btn-info" type="submit" value="create">
                        <i class="ace-icon fa fa-check bigger-110"></i>
                        Submit
                    </button>

                    &nbsp; &nbsp; &nbsp;
                    <button class="btn" type="reset">
                        <i class="ace-icon fa fa-undo bigger-110"></i>
                        Reset
                    </button>
                </div>
            </div>

            <div class="hr hr-24"></div>
        </form>

    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>


